<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.itpearls.tramservercuba.web.aggregatemodel.AggregateModelEdit"
        datasource="aggregateModelDs"
        focusComponent="fieldGroup"
        messagesPack="ru.itpearls.tramservercuba.web.aggregatemodel">
    <dsContext>
        <datasource id="aggregateModelDs"
                    class="ru.itpearls.tramservercuba.entity.AggregateModel"
                    view="edit">
            <collectionDatasource id="aggregateModelProvidersDs" property="aggregateModelProviders" />
        </datasource>
        <collectionDatasource id="groupDs"
                              class="ru.itpearls.tramservercuba.entity.AggregateGroup"
                              view="_minimal">
            <query>
                <![CDATA[select e from tramservercuba$AggregateGroup e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="typeDs"
                              class="ru.itpearls.tramservercuba.entity.AggregateType"
                              view="_minimal">
            <query>
                <![CDATA[select e from tramservercuba$AggregateType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <label htmlEnabled="true"
               value="msg://editTitleLabel"/>
        <tabSheet id="tabsheet">
            <tab id="generalInfoTab" spacing="true" margin="true" caption="msg://generalTabCaption">
                <fieldGroup id="fieldGroup"
                            datasource="aggregateModelDs">
                    <column width="250px">
                        <field property="code"
                               editable="false"/>
                        <field caption="msg://belongsCaption"
                               optionsDatasource="groupDs"
                               property="group"/>
                        <field property="aggregateKind"
                               required="true"/>
                        <field caption="msg://typeCaption"
                               optionsDatasource="typeDs"
                               property="type"
                               required="true"/>
                        <field caption="msg://modelCaption"
                               property="name"/>
                        <field property="modification"/>
                        <field property="description"/>
                    </column>
                </fieldGroup>
            </tab>
            <tab id="providersTab" caption="msg://providersTabCaption" margin="true" spacing="true">
                <table id="aggregateModelProvidersTable"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="provider.name" caption="msg://ru.itpearls.tramservercuba.entity/Provider.name"/>
                        <column id="provider.code" caption="msg://providerCodeCaption"/>
                        <column id="isMain"/>
                        <column id="activity" caption="msg://activityColumnCaption"/>
                        <column id="aggregateModel.code" caption="msg://aggregateModelCodeCaption" collapsed="true"/>
                        <column id="isDeliver" collapsed="true" caption="msg://isDeliverCaption"/>
                        <column id="isProducer" collapsed="true" caption="msg://isProducerCaption"/>
                    </columns>
                    <rows datasource="aggregateModelProvidersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="aggregateModelProvidersTable.create"/>
                        <button id="editBtn"
                                action="aggregateModelProvidersTable.edit"/>
                        <button id="removeBtn"
                                action="aggregateModelProvidersTable.remove"/>
                        <popupButton id="excelBtn" icon="icons/excel.png"
                                     caption="msg://excelAction">
                            <actions>
                                <action id="importExcel"
                                        caption="msg://importExcelAction"
                                        invoke="excelImportActionInvoke"/>
                            </actions>
                        </popupButton>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
